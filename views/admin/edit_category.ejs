<%- include('../_layouts/adminheader')%>
<h2 class="page-title">Edit a Category</h2>

<a href="/admin/categories" class="btn btn-primary">Back to all Category</a>
<br><br>
<div class="row">
    <div class="col-md-8">
        <form action="/admin/categories/edit-category/<%= id %>" method="post">
            <div class="form-group"> 
                <label for="">Title</label>
                <input type="text" value="<%- title %>" name="title" class="form-control" placeholder="Title">
            </div>

            <button class="btn btn-default">Submit</button>
        
        </form>
        
    </div>
</div>

